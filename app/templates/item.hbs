<div class="row">
  <div class="col-md-6">
    <img src={{model.image}} alt={{model.name}} />
    <br>
    <br>
    {{new-review item=model review=review saveReview="saveReview"}}
  </div>

  <div class="col-md-6">
    {{item-tile item=model}}
    <h3>Reviews for {{model.name}}:</h3>
    <hr>
    <h4>Sort by</h4>
    {{radio-button value="rating" groupValue=sortBy}}Rating
    {{#each model.reviews as |review|}}
      {{review-tile review=review}}
    {{/each}}
  </div>
</div>
