<form>
  <div class="form-group">
    <label for="name">Item Name: </label>
    {{input type="text" value=name id="name"}}
  </div>

  <div class="form-group">
    <label for="brand">Item Brand: </label>
    {{input type="text" value=brand id="brand"}}
  </div>

  <div class="form-group">
    <label for="description">Item Description: </label>
    {{textarea type="text" rows="7" cols="40" value=description id="description"}}
  </div>

  <div class="form-group">
    <label for="image">Item Image URL: </label>
    {{input type="text" value=image id="image"}}
  </div>

  <div class="form-group">
    <label for="price">Item Price: </label>
    {{input type="number" value=price id="price"}}
  </div>

  <button {{action 'saveItem'}} class="btn btn-success">Add Item</button>
</form>
