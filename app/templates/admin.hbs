<div class="text-center">
  <h1>Welcome to the Admin Page!</h1>
  <h2>Add a New Item:</h2>
  {{new-item item=item saveItem="saveItem"}}

  <div class="row">
    <div class="col-md-6">
      <h2>All Items:</h2>
      {{#each model.items as |item|}}
        <div class="item-list">
          {{admin-item-tile item=item editItem="editItem"}}
          <button class="btn btn-danger" {{action 'destroyItem' item}}>Delete Item</button>
        </div>
      {{/each}}
    </div>
    <div class="col-md-6">
      <h2>All Reviews:</h2>
      {{#each model.reviews as |review|}}
        <div class="review-list">
          {{admin-review-tile review=review editReview="editReview" destroyReview="destroyReview"}}
        </div>
      {{/each}}
    </div>
  </div>
</div>
